<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.REMoney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/material_dynamic_primary40</item>
        <item name="android:navigationBarColor">@color/material_dynamic_primary90</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@drawable/rounded_dialog_background</item> <!-- 使用圆角背景 -->
        <item name="android:windowNoTitle">true</item> <!-- 不显示标题栏 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 确保透明背景 -->
    </style>
</resources>